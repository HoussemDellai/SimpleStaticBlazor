@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Web
@page "/"

<div class="main">
    <div class="content px-4">
        <h1>Hello, world!</h1>
        <p>Current count: @currentCount</p>
        <button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
    </div>
</div>

@code {
    int currentCount = 0;

    void IncrementCount()
    {
        currentCount++;
    }
}
